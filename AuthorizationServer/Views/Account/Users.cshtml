@using AuthorizationServer.ViewModels

@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "用户列表";
}

<h2>@ViewData["Title"]</h2>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessfulMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessfulMessage"]</div>
}
<p>
    <a asp-action="AddUser"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 添加用户</a>
</p>
<table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alias)
        </th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                <button class="btn btn-link" onclick="deleteUser('@item.Id')" style="padding: 0;">删除</button>
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
    function deleteUser (id) {
        if (confirm("确认删除?")) {
            window.location.href = "/Account/DeleteUser?id=" + id;
        }
    }
</script>