@using Microsoft.AspNetCore.Authentication;
@{
    ViewData["Title"] = "关于当前用户";
}
<h2>@ViewData["Title"]</h2>

<h3>当前用户信息</h3>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>

    }
    <dt>id token</dt>
    <dd>@await ViewContext.HttpContext.GetTokenAsync("id_token")</dd>
</dl>
